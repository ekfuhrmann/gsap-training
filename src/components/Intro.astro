---
interface Props {
  title: string
  eyebrow: string | number
}

const { title, eyebrow } = Astro.props
---

<div class="flex flex-col">
  <h2 class="text-lg font-semibold uppercase text-white/50">{eyebrow}</h2>
  <h1 class="mb-4 text-4xl font-bold">{title}</h1>
  <div class="max-w-[65ch] space-y-4 leading-loose">
    <slot />
  </div>
</div>
